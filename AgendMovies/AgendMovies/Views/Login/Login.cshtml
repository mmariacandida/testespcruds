    <title>website agendmovies login & cadastro</title>
    <link href="@Url.Content("~/styles/login.css")" rel="stylesheet" />
</head>

<body style="background-image: url(@Url.Content("~/img/loginbackground.png"));">

    <header>
        <a href='@Url.Action("Index", "Home")'>
            <h2 class="logo"><img src="~/img/Logo.png"></h2>
        </a>
        <nav class="navigation">
            <a href="filmes.html">Filmes</a>
