    </header>
    <main>
        <div class="wrapper">
            <div class="form-box_login">
                <!-- <img src="img/Logo.png"> -->
                <h2 class="login">Login</h2>
                <form action="#">
                    <div class="input-box">
                        <span class="icon"><ion-icon name="mail"></ion-icon></span>
                        <input type="text" id="email_colocado" required>
                        <label>Email</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
                        <input type="password" id="senha_colocada" required>
                        <label>Password</label>
                    </div>
                    <div class="lembrar">
                        <label><input type="checkbox">Se lembre de mim</label>
                        <a href='@Url.Action("EsquecerSenha1etapa", "EsquecerSenha1etapa")'>Esqueceu a senha?</a>
                    </div>
                    <input type="submit" value="Login" class="btn" onclick="logar(); return false">
                    <div class="login-registro">

                        <p class="ajuste">
                            Ainda não tem uma conta?
                            <a href="#" class="register-link">Cadastre-se</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
        <script src="script.js"></script>
        <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    </main>

