@model AgendMovies.Modelos.Filme

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Visualizar</title>
</head>
<body>
    <div>
        <h4>Filme</h4>
        @if (Model.ConteudoDaFoto == null)
        {
            <img id="CapaFilme" src="~/img/CapaIndefinida.png" alt="Capa do filme" />
        }
        else
        {
            <img id="CapaFilme" src="@Url.Action("GetLogoTipo", "CRUDFilmes", new {id = Model.FilmeId})" alt="Capa do filme" />
        }
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Sinopse)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Sinopse)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Indicativa)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Indicativa)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Genero)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Genero)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ConteudoDaFoto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ConteudoDaFoto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TipoDaFoto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TipoDaFoto)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.FilmeId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
